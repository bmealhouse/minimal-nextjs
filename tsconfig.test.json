{
  "compilerOptions": {
    // project options
    "allowJs": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": true,
    "target": "es5",
    // strict checks
    "strict": true,
    // module resolution
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    // advanced
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
